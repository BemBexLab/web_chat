              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/logout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "user",
                "logout"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": [
            "{{base_url}}"
          ],
          "path": [
